#initializing node

class node:
    def __init__(self,data):
        self.data=data
        self.next=None
        
#creating linked list

class linkedlist:
    def __init__(self):
        self.head=None
        
#prepend (inserting elements at the beginning)
    
    def prepend(self,data):
        newnode=node(data)
        newnode.next=self.head
        self.head=newnode
        
#append (inserting elements at the ending)

    def append(self,data):
        newnode=node(data)
        temp=self.head
        while temp.next:
            temp=temp.next
        temp.next=newnode
        
#insert at the position

    def insert(self,pos,data):
        newnode=node(data)
        temp=self.head
        for i in range(pos-1):
            temp=temp.next
        newnode.data=data
        newnode.next=temp.next
        temp.next=newnode
        
#printing elements
    
    def traversal(self):
        if self.head==None:
            print("list is empty")
        else:
            temp=self.head
            while temp is not None:
                print(temp.data,end="-->")
                temp=temp.next
                
#counting no.of elements

    def counting(self):
        print("\n")
        count=0
        temp=self.head
        while temp is not None:
            temp=temp.next
            count+=1
        print(count) 

n1=node(5)
s1=linkedlist()
s1.head=n1
n2=node(10)
n1.next=n2
n3=node(15)
n2.next=n3
s1.prepend(2)
s1.append(20)
s1.insert(3,12)
s1.traversal()
s1.counting()

output:

2-->5-->10-->12-->15-->20-->

6
